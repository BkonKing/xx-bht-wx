@import '/resource/css/list.wxss';
page{
  background:#fafafa;
  width: 100%;
}
/* 商品 start */
.apply-header {
  padding: 30rpx;
  background-color: #fff;
  margin-bottom: 30rpx;
}
.shop-item {
  display: flex;
  height: 150rpx;
  position: relative;
  margin-bottom: 30rpx;
}
.shop-item:last-child {
  margin-bottom: 0;
}
.shop-pic {
  width: 150rpx;
  margin-right: 20rpx;
}
.shop-info {
  width: 500rpx;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.shop-name {
  line-height: 48rpx;
  color: #212124;
}
.shop-specs {
  line-height: 42rpx;
  color: #b8babf;
  font-size: 26rpx;
}
/* 商品 end */

.select-session {
  border: 1px solid #efefef;
}
.link-item {
  height: 120rpx;
  padding: 0 20rpx;
}
.link-item:last-child::after,.no-border::after {
  display: none;
}
.link-item::after {
  left: 19rpx;
  right: 19rpx;
  background-color: #f1f1f1;
}
.link-left {
  width: 168rpx;
}
.link-left text {
  color: #f33f3f;
}
.link-middle {
  display: flex;
  align-items: center;
  color: #b8babf;
  text-align: left;
}
.address-item {
  height: 145rpx;
  align-items: flex-start;
}
.address-item .link-left {
  height: 100%;
  display: flex;
  line-height: 50rpx;
  padding-top: 30rpx;
}
.address-item .link-middle {
  display: block;
}
.user-info {
  display: flex;
  color: #60646b;
  line-height: 50rpx;
  padding-top: 30rpx;
}
.user-info view:nth-child(1) {
  margin-right: 40rpx;
  max-width: 230rpx;
}
.user-address {
  color: #b8babf;
  font-size: 24rpx;
  line-height: 46rpx;
}
.color-60646b {
  color: #60646b;
}
.apply-tit {
  height: 88rpx;
  line-height: 88rpx;
  color: #f33f3f;
  font-size: 26rpx;
  text-align: center;
}
.pic-list {
  height: 154rpx;
  padding-bottom: 40rpx;
}
.upload-pic {
  display: flex;
  height: 114rpx;
  justify-content: space-between;
}
.pic-item {
  margin-right: 20rpx;
}
.pic-item:nth-of-type(5) {
  margin-right: 0;
}
.pic-box {
  width: 114rpx;
  height: 114rpx;
  position: relative;
}
.del-pic {
  position: absolute;
  right: -34rpx;
  top: -34rpx;
  width: 68rpx;
  height: 68rpx;
  padding: 20rpx;
}
.del-pic view {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  background: #f33f3f;
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
}
.del-pic view::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  margin: -2rpx 0 0 -6rpx;
  width: 12rpx;
  height: 4rpx;
  background-color: #ffffff;
}
.bottom-empty,.bottom-fixed {
  height: 148rpx;
}
.bottom-fixed {
  padding: 30rpx;
}




.apply-block {
  padding: 30rpx 32rpx 59rpx;
  font-size: 28rpx;
}
.apply-section {
  box-sizing: border-box;
  border: 1rpx solid #e4e4e4;
  background-color: #fff;
  border-radius: 15rpx;
  margin-bottom: 28rpx;
  position: relative;
}
.apply-goods {
  padding: 40rpx 20rpx;
}
.apply-goods-pic {
  float: left;
  font-size: 0;
  overflow: hidden;
}
.apply-goods-pic image {
  width: 102rpx;
  height: 102rpx;
  border-radius: 5rpx;
}
.apply-goods-info {
  float: left;
  margin-left: 20rpx;
  width: 520rpx;
}
.apply-goods-name {
  height: 56rpx;
  line-height: 56rpx;
  color: #000;
}
.apply-goods-words {
  line-height: 38rpx;
  color: #999;
  font-size: 24rpx;
}
.apply-reason {
  padding: 0;
  height: 122rpx;
  width: 100%;
  line-height: 120rpx;
  position: relative;
}
.more_right {
  width: 16rpx;
  height: 27rpx;
  position: absolute;
  right: 20rpx;
  top: 50%;
  margin-top: -13rpx;
}
