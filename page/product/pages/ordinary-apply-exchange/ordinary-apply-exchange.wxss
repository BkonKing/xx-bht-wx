.picker-block {
  padding: 0 20rpx;
}
.reason-left {
  float: left;
  font-size: 30rpx;
  color: #333;
  max-width: 515rpx;
}
.reason-right {
  float: right;
  color: #333;
  margin-right: 36rpx;
}

.apply-pic,.apply-areatext {
  padding: 20rpx 20rpx 40rpx;
}
.apply-pic-tit,.apply-areatext-tit {
  line-height: 68rpx;
  font-size: 30rpx;
  color: #333;
}
.apply-pic-tit text {
  color: #999;
}


.areatext-block {
  width: 100%;
  margin: 0 auto;
  min-height: 240rpx;
  background-color: #f4f4f4;
  overflow: hidden;
  box-sizing: border-box;
  padding: 20rpx 30rpx 35rpx;
  position: relative;
}
.areatext-input {
  width: 100%;
  height: 200rpx;
  font-size: 30rpx;
  line-height: 46rpx;
  color: #333;
  word-break:break-all;
}
.words-num {
  position: absolute;
  right: 30rpx;
  bottom: 5rpx;
  font-size: 24rpx;
  color: #999;
}
.areatext-btn {
  width: 686rpx;
  margin: 59rpx 0 0;
  color: #fff;
  background-color: #ffae00;
}
button[disabled].areatext-btn:not([type]) {
  color: #fff;
  background-color: #ffdf6f;
}
.menuItem + .menuItem {
  border-top: 1px solid #f2f2f2;
}
.shareMenu .menuItem.close {
  border-top: 1px solid #f2f2f2;
}
.shareMenu .menuItem {
  border-bottom: none;
}