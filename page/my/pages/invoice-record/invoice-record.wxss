/* page/my/pages/invoice-record/invoice-record.wxss */
page {
  background: #F7F7F7;
}

.nav-box {
  display: flex;
  justify-content: space-between;
  width: 750rpx;
  height: 88rpx;
  padding: 0 32rpx;
  position: fixed;
  z-index: 2;
  background: #FFFFFF;
}

.nav-box>view {
  display: flex;
}

.nav-item {
  font-size: 28rpx;
  font-weight: 500;
  color: #212124;
  line-height: 64rpx;
  padding: 0 20rpx 0 40rpx;
  margin-top: 12rpx;
}

.cur {
  position: relative;
  font-weight: bold;
}

.cur::after {
  content: '';
  position: absolute;
  left: 40rpx;
  bottom: 0rpx;
  display: block;
  width: 80rpx;
  height: 6rpx;
  background: #212124;
}

.nav-btn {
  width: 120rpx !important;
  height: 64rpx;
  padding: 0 12rpx;
  margin-top: 12rpx;
  border-radius: 2rpx;
  font-size: 28rpx;
  font-weight: 500;
  line-height: 62rpx;
  color: #212124;
  background: #fff;
  border: 1rpx solid #CCCCCC;
  text-align: center;
}

.nav-btn-1 {
  margin-right: 20rpx !important;
  color: #FFFFFF;
  background: #212124;
  border: none;
}

.all-list-box {
  height: 100%;
  padding-top: 118rpx;
}

.list-container {
  padding: 0 32rpx 30rpx;
}

.wrapper {
  display: flex;
  flex-direction: column;
  border-radius: 4rpx;
  background-color: #ffffff;
}

.body {
  display: flex;
  flex-direction: column;
  width: 100%;
  padding: 0 30rpx 30rpx;
}

.group {
  display: flex;
  min-height: 48rpx;
  margin-top: 19rpx;
}

.button-wrapper {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
  border-radius: 2rpx;
  background-color: rgba(239, 65, 65, 0.10);
  padding-right: 17rpx;
  padding-left: 17rpx;
  height: 48rpx;
  line-height: 24rpx;
}

.button {
  color: #ef4141;
  font-size: 24rpx;
}

.location {
  flex: 1;
  width: 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 48rpx;
  color: #212124;
  font-weight: bold;
  font-size: 32rpx;
}

.group-1 {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 22rpx;
}

.btn-wrapper {
  display: flex;
  align-items: center;
  border-radius: 2rpx;
  background-color: #f7f7f7;
  padding-right: 16rpx;
  padding-left: 16rpx;
  height: 48rpx;
  overflow: hidden;
  line-height: 1;
}

.btn {
  color: #212124;
  font-size: 24rpx;
}

.price-wrapper {
  display: flex;
  align-items: flex-end;
}

.yuan {
  margin-right: 7rpx;
  margin-bottom: 3rpx;
  line-height: 24rpx;
  font-weight: bold;
  color: #212124;
  font-size: 24rpx;
}

.price {
  line-height: 40rpx;
  font-weight: bold;
  color: #212124;
  font-size: 40rpx;
}

.footer {
  display: flex;
  align-items: center;
  flex-direction: column;
  margin-top: 1rpx;
  width: 100%;
  height: 91rpx;
}

.horizontal-line {
  position: relative;
  margin-top: -1rpx;
  background-color: #ededed;
  width: 626rpx;
  height: 1rpx;
}

.group-2 {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 34rpx;
  width: 627rpx;
  height: 23rpx;
}

.view {
  display: flex;
  align-items: center;
  height: 24rpx;
}

.detail {
  margin-right: 20rpx;
  color: #212124;
  font-size: 24rpx;
}

.icon-right {
  width: 12rpx;
  height: 22rpx;
  color: #212124;
}

.tag {
  line-height: 24rpx;
  white-space: nowrap;
  color: #212124;
  font-size: 24rpx;
}

.empty-none {
  padding-top: 0;
  margin-top: 397rpx;
}

.empty-none image {
  width: 312rpx;
  height: 284rpx;
}