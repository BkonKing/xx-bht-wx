/* login */
.loginModel {
  background: #fff;
  width: 500rpx;
  height: 410rpx;
  margin: auto;
  position: fixed;
  top: 50%;
  left: 50%;
  margin: -205rpx 0 0 -250rpx;
  z-index: 999;
  border-radius: 16rpx;
  text-align: center;
  opacity: 1;
  padding: 40rpx 20rpx 30rpx;
}

.loginText {
  font-size: 13px;
  margin: 20rpx 0 18rpx;
}

.loginBtn {
  background: #269c22;
  margin: 0 auto;
  color: #fff;
  padding: 10rpx 0;
  margin-top: 26rpx;
  height: 90rpx;
  line-height: 70rpx;
  border-radius: 10rpx;
  font-size: 14px;
}

button.loginBtn:not([size='mini']) {
  width: 420rpx !important;
}

.loginBtnimg {
  width: 46rpx;
  height: 46rpx;
  vertical-align: middle;
  margin-right: 16rpx;
}

.loginBtn::after {
  border: 0
}

.loginImg {
  width: 130rpx;
  height: 130rpx;
}

.loginBg {
  z-index: 998;
}

.modal-bg {
  z-index: 9999999;
  display: flex;
  justify-content: center;
  align-items: center;
}


.modal-body {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 600rpx;
  height: 448rpx;
  background: #FFFFFF;
  border-radius: 4rpx;
}

.modal-body-text {
  font-size: 30rpx;
  font-weight: 500;
  color: #212124;
  line-height: 48rpx;
}

.open-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 400rpx;
  height: 88rpx;
  margin-top: 80rpx;
  background: linear-gradient(90deg, #DFB68D, #C4855E);
  box-shadow: 0px 1rpx 0px 0px rgba(255, 255, 255, 0.5);
  border-radius: 44rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #FFFFFF;
}

.modal-close-btn {
  width: 44rpx;
  height: 44rpx;
  position: absolute;
  bottom: -84rpx;
}

#topbar .left-title-bar {
  padding-left: 100rpx;
  padding-right: 200rpx;
}

#topbar .left-title-txt {
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}