page{
  background:#fafafa;
  width: 100%;
}
.record-tit {
  line-height: 1;
  padding: 40rpx 0 30rpx 32rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #212124;
}
.record-list {
  margin: 0 32rpx 20rpx;
}

.vip-order + .vip-order {
  margin-top: 30rpx;
}

.vip-order {
  position: relative;
  width: 100%;
  display: flex;
  flex-direction: column;
  border-radius: 4rpx;
  background-color: #ffffff;
}

.vip-body {
  display: flex;
  padding: 30rpx 0;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.vip-view {
  display: flex;
  width: 134rpx;
  height: 80rpx;
}

.vip-logo {
  width: 134rpx;
  height: 80rpx;
}

.vip-view-1 {
  display: flex;
  flex-direction: column;
  margin-left: 30rpx;
}

.vip-title {
  line-height: 32rpx;
  font-weight: bold;
  color: #212124;
  font-size: 32rpx;
}

.vip-date {
  margin-top: 28rpx;
  line-height: 24rpx;
  color: #aaaaaa;
  font-size: 24rpx;
}

.red-text {
  color: #EF4141;
}

.vip-view-2 {
  position: absolute;
  top: 0;
  right: 0;
  display: flex;
  align-items: center;
  border-top-right-radius: 4rpx;
  border-bottom-left-radius: 12rpx;
  background-color: #f9f3eb;
  padding-right: 17rpx;
  padding-left: 17rpx;
  height: 48rpx;
  line-height: 24rpx;
}

.vip-buy {
  color: #cb9348;
  font-size: 24rpx;
}

.vip-footer {
  display: flex;
  flex-direction: column;
  margin-top: 1rpx;
  width: 100%;
  min-height: 86rpx;
}

.vip-horizontal-line {
  align-self: center;
  margin-top: -1rpx;
  background-color: #ededed;
  width: 626rpx;
  height: 1rpx;
}

.vip-price-wrapper {
  display: flex;
  align-items: center;
  align-self: flex-end;
  margin-top: 28rpx;
  margin-right: 36rpx;
  height: 27rpx;
}

.vip-label {
  margin-right: 5rpx;
  line-height: 24rpx;
  /* font-weight: bold; */
  color: #aaaaaa;
  font-size: 24rpx;
}

.vip-yuan {
  margin-right: 6rpx;
  line-height: 26rpx;
  font-weight: bold;
  color: #212124;
  font-size: 26rpx;
}

.vip-price {
  line-height: 32rpx;
  font-weight: bold;
  color: #212124;
  font-size: 32rpx;
}