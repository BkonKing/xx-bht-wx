/* page/my/pages/invoice-title-edit/invoice-title-edit.wxss */
page {
  background: #fafafa;
  line-height: 1;
}

.form-list {
  position: relative;
  margin: 30rpx 30rpx 0;
  border-radius: 4px;
  background-color: #fff;
}

.form-item {
  display: flex;
  align-items: center;
  min-height: 86rpx;
  padding: 0 30rpx;
  position: relative;
}

.form-item::after {
  left: 30rpx;
  right: 30rpx;
}

.item-name {
  width: 140rpx;
  color: #212124;
}

.itemt-text {
  /* width: 532rpx; */
  display: flex;
  justify-content: flex-end;
  flex-grow: 1;
  margin-left: 20rpx;
  height: 86rpx;
  padding: 20rpx 0;
}

.line {
  border-bottom: 2rpx solid #EEEEEE;
}

.text-right {
  text-align: right;
}

.radio-group {
  display: flex;
  align-items: center;
}

.item-radio {
  display: flex;
  align-items: center;
}

.item-radio+.item-radio {
  margin-left: 60rpx;
}

.item-radio radio .wx-radio-input {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}

.item-checkbox {
  margin-top: -4rpx;
  margin-right: -10rpx;
}

checkbox .wx-checkbox-input {
  display: block;
  width: 32rpx;
  height: 32rpx;
  text-align: center;
  border-radius: 50%;
}

/*checkbox选中后样式  */
checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  border-color: #000;
  background: #000;
}

/*checkbox选中后图标样式  */
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  font-size: 32rpx;
}

.itemt-text input {
  width: 100%;
  height: 100%;
  font-size: 28rpx;
  color: #212124;
  text-align: right;
}

.placeholder {
  color: #bbbbbb;
}

.required-after::after {
  content: '*';
  color: #EF4141;
}


.form-item.default-item {
  align-items: center;
  justify-content: space-between;
}

.default-item .item-name {
  width: 250rpx;
}

.synchronous-btn {
  overflow: hidden;
}

.btn-kong {
  height: 148rpx;
}

.btn-box {
  display: flex;
  justify-content: space-between;
  padding: 30rpx;
}

.btn-box view {
  width: 335rpx;
}

.btn-box view.btn-100 {
  width: 100%;
}

.sure-btn {
  border-radius: 44rpx;
}

.sure-btn.disabled-btn {
  background-color: #919499;
}

@keyframes translateMove {
  from {
    transform: translateY(100%);
  }

  to {
    transform: translateY(0);
  }
}

@-webkit-keyframes translateMove {
  from {
    transform: translateY(100%);
  }

  to {
    transform: translateY(0);
  }
}