/* 弹窗 start */
.modal-bg {
  display: flex;
  align-items: center;
  justify-content: center;
}
.modal-session {
  width: 600rpx;
  background-color: #fff;
  border-radius: 4rpx;
  animation: myfain 0.6s;
  -webkit-animation: myfain 0.6s;
}
.modal-item {
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  color: #60646b;
  position: relative;
  padding-left: 30rpx;
  display: flex;
  align-items: center;
}
.modal-checkbox {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  border: 2rpx solid #b8babf;
  margin-right: 10rpx;
}
.modal-item.cur .modal-checkbox {
  border: none;
  background: #212124 url('https://bht.liwushijian.com/library/img/xcx_img/cart_03.png') no-repeat center center/100% 100%;
}
.modal-operation {
  display: flex;
  position: relative;
}
.modal-operation::after {
  content: '';
  position: absolute;
  top: 32rpx;
  left: 300rpx;
  width: 1px;
  height: 60rpx;
  background-color: #f1f1f1;
}
.modal-operation view {
  line-height: 120rpx;
  flex: 1;
  text-align: center;
  height: 100%;
  color: #919499;
}
.modal-operation view:nth-child(2){
  color: #212124;
}
/* 弹窗 end */